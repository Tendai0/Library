@model Library.Models.Branch.BranchIndexModel

@{

    ViewBag.Title = "Branchs Index";
}

<h3>@ViewBag.Title</h3>
<div class="table-striped">
    <table class="table">
        <thead>
            <tr>
                <th>Branch Name</th>
                <th>Open Now</th>
                <th>Number Of Assets</th>
                <th>Number Of Patrons</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var branch in Model.Branches)
            {
            <tr>
                <td><a asp-controller="Branch" asp-action="Detail" asp-route-id="@branch.Id">@branch.Name</a></td>
                <td>@branch.IsOpen</td>
                <td>@branch.NumberOfAssets</td>
                <td>@branch.NumberOfPatrons</td>
            </tr>

            }
        </tbody>
    </table>
</div>